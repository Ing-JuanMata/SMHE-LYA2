inicio prueba{
comienzo (cada 2+5 min){
	declarar aulaAbierta como logico =  estado puertas && estado ventanas; 
	condicion(!aulaAbierta){
		usar abrirPuertasYVentanas();
	}sino condicion(!estado puertas){
		usar abrirPuertasTiempo(10*2);
	}sino {
		usar abrirVentanasTiempo(10-5);
	}
}

funcion abrirPuertasTiempo(declarar tiempo como entero){
	abrir puertas por tiempo min;
	salir;
}

funcion abrirVentanasTiempo(declarar tiempo como entero){
	abrir ventanas por tiempo min;
	salir;
}

funcion abrirPuertasYVentanas(){
	abrir puertas mantener;
	abrir ventanas mantener;
	salir;
}
}fin